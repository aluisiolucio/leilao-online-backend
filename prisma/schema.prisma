generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  createdAt   DateTime
  updatedAt   DateTime
  email       String        @unique
  name        String?
  password    String
  Auction     Auction[]
  Inscription Inscription[]

  @@map("users")
}

model Auction {
  id          String   @id @default(uuid())
  createdAt   DateTime
  updatedAt   DateTime
  title       String
  description String
  imagePath   String
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  Batch       Batch[]

  @@map("auctions")
}

model Batch {
  id             String        @id @default(uuid())
  createdAt      DateTime
  updatedAt      DateTime
  title          String
  status         String
  number         Int
  price          Float
  startDateTime  DateTime
  especification String
  contactName    String
  contactPhone   String
  auction        Auction       @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  auctionId      String
  Inscription    Inscription[]

  @@map("batches")
}

model Inscription {
  id        String   @id @default(uuid())
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  batch     Batch    @relation(fields: [batchId], references: [id])
  batchId   String

  @@map("inscriptions")
}
